<SailUserControl  x:Class="Sail.Demo.Wpf.Views.ToolkitMessages.StudentList"
                  x:TypeArguments="mv:StudentListViewModel"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:hc="https://handyorg.github.io/handycontrol"
                  xmlns:mv="clr-namespace:Sail.Demo.Wpf.ViewModels.ToolkitMessages;assembly=Sail.Demo.Wpf.Application"
                  d:DataContext="{ d:DesignInstance Type=mv:StudentListViewModel, IsDesignTimeCreatable=True}"
                  d:DesignHeight="300"
                  d:DesignWidth="250"
                  d:Background="White"
                  mc:Ignorable="d">
    <DockPanel>
        <ToggleButton HorizontalAlignment="Left"
                      DockPanel.Dock="Top"
                      Style="{StaticResource ToggleButtonSwitch}"
                      IsChecked="{Binding AllowAddNew}"
                      Content="Allow Adding" />
        <hc:TextBox Margin="0,10"
                    hc:TitleElement.Title="Student Count"
                    hc:TitleElement.TitlePlacement="Left"
                    IsReadOnly="True"
                    DockPanel.Dock="Top"
                    Text="{Binding StudentCount, Mode=OneWay}" />
        <ListBox Grid.Row="2"
                 hc:TitleElement.Title="Student List"
                 d:ItemsSource="{x:Null}"
                 ItemsSource="{Binding Students}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}, {1}, {2}">
                                <Binding Path="Name" />
                                <Binding Path="Class" />
                                <Binding Path="Phone" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</SailUserControl>
